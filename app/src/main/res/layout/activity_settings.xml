<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_edit_profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/default_avatar" />

    <Button
        android:id="@+id/btn_change_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_edit_profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Изменить аватарку"
        android:background="@drawable/rounded_button"/>

    <EditText
        android:id="@+id/et_edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_change_picture"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Имя пользователя" />

    <EditText
        android:id="@+id/et_edit_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_edit_username"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Биография" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_edit_bio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Сохранить"
        android:background="@drawable/rounded_button"/>
</RelativeLayout>
